<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toborrow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.administrator.xss.MainActivity">
    <!--   android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
 android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"-->

    <TextView
        android:id="@+id/text_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="待借书单"
        android:textColor="@color/textcolor"
        android:textSize="16sp" />
 
    <Button
        android:id="@+id/button_delete"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:background="#00000000"
        android:text="@string/button_delete"
        android:textColor="@color/blue"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/toborrow_book_image"
        android:scaleType="fitXY"
        android:layout_width="58dp"
        android:layout_height="80dp"
        android:layout_below="@+id/text_top"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:background="#e0ffffff"
        android:elevation="5dp" />

    <TextView
        android:id="@+id/toborrow_book_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toborrow_book_name"
        android:layout_alignBottom="@+id/toborrow_book_name"
        android:layout_alignEnd="@+id/button_delete"
        android:layout_alignRight="@+id/button_delete"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round"
        android:textColor="@color/blue"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/toborrow_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_top"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/toborrow_book_image"
        android:layout_toRightOf="@+id/toborrow_book_image"
        android:textColor="#e0000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/toborrow_book_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toborrow_book_name"
        android:layout_below="@+id/toborrow_book_name"
        android:layout_marginTop="2dp"
        android:textColor="#e0000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/toborrow_book_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toborrow_book_writer"
        android:layout_below="@+id/toborrow_book_writer"
        android:layout_marginTop="2dp"
        android:textSize="12sp" />

    <TextView

        android:id="@+id/toborrow_book_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toborrow_book_image"
        android:layout_alignLeft="@+id/toborrow_book_location"
        android:layout_alignStart="@+id/toborrow_book_location"
        android:textSize="13sp" />

    <ImageButton
        android:id="@+id/button_add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/toborrow_book_value"
        android:layout_alignEnd="@+id/toborrow_book_state"
        android:layout_alignRight="@+id/toborrow_book_state"
        android:background="@drawable/ic_more_vert_grey600_24dp"
        android:onClick="toborrow_add"/>

    <Button
        android:id="@+id/button_all"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/bg1"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="查看全部"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/button_add"
        android:layout_marginTop="13dp"
        android:background="@color/bg" />

    <ImageView
        android:id="@+id/bg2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/button_all"
        android:background="@color/bg" />

</RelativeLayout>

