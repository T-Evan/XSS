<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shudan_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.administrator.xss.MainActivity">
    <!--   android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
 android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"-->


 


    <ImageView
        android:id="@+id/shudan_book_image"
        android:scaleType="fitXY"
        android:layout_width="58dp"
        android:layout_height="80dp"
        android:layout_below="@+id/text_top"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:background="#e0ffffff"
        android:elevation="5dp" />

    <TextView
        android:id="@+id/shudan_book_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="21dp"
        android:background="@drawable/round"
        android:textColor="@color/blue"
        android:textSize="12sp"
        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/shudan_book_image"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/shudan_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_top"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/shudan_book_image"
        android:layout_toRightOf="@+id/shudan_book_image"
        android:textColor="#e0000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/shudan_book_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shudan_book_name"
        android:layout_below="@+id/shudan_book_name"
        android:layout_marginTop="2dp"
        android:textColor="#e0000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/shudan_book_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shudan_book_writer"
        android:layout_below="@+id/shudan_book_writer"
        android:layout_marginTop="2dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/shudan_book_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shudan_book_image"
        android:layout_alignLeft="@+id/shudan_book_location"
        android:layout_alignStart="@+id/shudan_book_location"
        android:textSize="13sp" />

    <ImageButton
        android:id="@+id/button_add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_more_vert_grey600_24dp"
        android:onClick="toborrow_add"
        android:layout_alignBottom="@+id/shudan_book_value"
        android:layout_alignEnd="@+id/shudan_book_state" />





    <ImageView
        android:id="@+id/bg2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/button_add"
        android:layout_marginTop="10dp"
        android:background="@color/bg" />

</RelativeLayout>

